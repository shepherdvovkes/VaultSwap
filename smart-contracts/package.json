{
  "name": "ultrana-dex-smart-contracts",
  "version": "1.0.0",
  "description": "Ultrana DEX Smart Contracts - Security-First DEX Implementation",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:bsc": "hardhat run scripts/deploy.js --network bsc",
    "deploy:arbitrum": "hardhat run scripts/deploy.js --network arbitrum",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "size": "hardhat size-contracts",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "fork:mainnet": "hardhat node --fork https://mainnet.infura.io/v3/$INFURA_API_KEY",
    "fork:polygon": "hardhat node --fork https://polygon-rpc.com",
    "security": "slither .",
    "security:mythril": "myth analyze .",
    "security:echidna": "echidna-test .",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol'",
    "typechain": "typechain --target ethers-v5 --out-dir typechain-types 'artifacts/contracts/**/*.json'"
  },
  "keywords": [
    "defi",
    "dex",
    "amm",
    "trading",
    "liquidity",
    "staking",
    "governance",
    "mev-protection",
    "security",
    "ethereum",
    "solidity"
  ],
  "author": "Ultrana DEX Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-interface-generator": "^0.0.3",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ultrana-dex/smart-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/ultrana-dex/smart-contracts/issues"
  },
  "homepage": "https://github.com/ultrana-dex/smart-contracts#readme"
}
